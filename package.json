{
  "name": "typescript-mongo-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate of an API project using Express, MongoDB and Typescript",
  "main": "src/index.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "test": "NODE_ENV=test mocha -r ts-node/register --require tests/setup/globalSetup.ts 'tests/**/*.ts'",
    "test:coverage": "nyc yarn test",
    "lint": "./node_modules/eslint/bin/eslint.js  src --ext .ts",
    "setup": "chmod +x ./setup.sh && ./setup.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiagorccabral/typescript-mongo-boilerplate.git"
  },
  "keywords": [
    "monogo",
    "express",
    "typescript"
  ],
  "author": "Tiago Cabral",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tiagorccabral/typescript-mongo-boilerplate/issues"
  },
  "homepage": "https://github.com/tiagorccabral/typescript-mongo-boilerplate#readme",
  "dependencies": {
    "@types/lodash": "^4.14.168",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "mongoose": "^5.11.13",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.14",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.0",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.22",
    "@types/passport": "^1.0.5",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
